@model MyCompu.Models.Usuario

@{
    ViewData["Title"] = "Registro";
}

<form asp-action="Register" method="post" class="bloque mx-auto">
    <div class="form-horizontal">
        <h1 class="text-center text-white">Registro</h1>
        <h4 class="text-center text-white">Completa el formulario para registrarte:</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row justify-content-center">
            <label asp-for="Correo" class="col-sm-4 col-form-label text-right text-warning">Correo</label>
            <div class="col-sm-7">
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label asp-for="Contraseña" class="col-sm-4 col-form-label text-right text-warning">Contraseña</label>
            <div class="col-sm-7">
                <input asp-for="Contraseña" type="password" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
        </div>
        <hr />

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </div>
    </div>
</form>
