@model IEnumerable<MyCompu.Models.Producto>

@{
    ViewData["Title"] = "Index";
}


<div class="bloque">
    <h1 class="text-center text-white">Productos</h1>
    @* <img src="/imagenes/img1.jpg" alt="Alternate Text" /> *@
</div>
<hr/>

@* <p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
</p> *@

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/imagenes/@item.Url" class="card-img-top" alt="@item.Nombre" style="width: 100%; height: auto;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                    <p class="card-text"><strong>Precio:</strong> @Html.DisplayFor(modelItem => item.Precio)</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="Compras" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Comprar</a>
                            @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
